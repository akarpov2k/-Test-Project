@model  IEnumerable<Spargo_Technology_Test_Project.Models.ViewModels.StockModel>

    @{
    ViewData["Title"] = "Stocks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create">Создать новый склад</a>
    <a asp-controller="Batch" asp-action="Create">Создать партию</a>
</p>

<h4>Склады</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <table>
            <tr>
                <th>
                    Название склада
                </th>
                <th>
                    Аптека
                </th>
            </tr>
        @foreach(var m in Model)
        {
            <tr>
            <th>
                @m.Name
            </th>
            <th>
                @m.Pharmacy?.Name
            </th>
            <th>
                    <a asp-controller="Batch" asp-action="BatchesByStock" asp-route-stockId="@m.Id">Партии склада</a>
                </th>
                <th>
                    <a onclick="return confirm('Вы уверены, что хотите удалить запись?')" asp-action="Delete" asp-route-id="@m.Id">удалить</a>
                </th>
            </tr>
        }
        </table>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
