@model IEnumerable<Spargo_Technology_Test_Project.Models.ViewModels.PharmacyModel>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Аптеки</h1>
<p>
    <a asp-action="Create">Создать новую атепку</a>
</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <table>
            <tr>
                <th>
                    Название аптеки
                </th>
                <th>
                    Адрес
                </th>
                <th>
                    Телефон
                </th>
            </tr>
            @foreach(var m in Model)
            {
                <tr>
                    <th>
                        @m.Name
</th>
<th>
    @m.Address

</th>
<th>
    @m.Phone
</th>
<th>
    <a asp-controller="Product" asp-action="PharmaciesProducts" asp-route-pharmacyId="@m.Id">Продукты в аптеке</a>
</th>
<th>
    <a onclick="return confirm('Вы уверены, что хотите удалить запись?')" asp-action="Delete" asp-route-id="@m.Id">удалить</a>
</th>
</tr>
            }
</table>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
}
